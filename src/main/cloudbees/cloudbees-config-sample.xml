<!-- CLOUDBEES CONFIGURATION PARAMETERS -->
<!-- http://wiki.cloudbees.com/bin/view/RUN/Configuration+Parameters -->
<!--  -->
<!-- bees config:update -a atelier-xebia/cocktail-manager cloudbees-config.xml -->
<!-- bees config:list -a atelier-xebia/cocktail-manager -->
<config>

   <param name="spring.profiles.active" value="prod" />

   <!-- AMAZON -->
   <!-- see http://aws.amazon.com/security-credentials -->
   <!-- xebia-cocktail amazon user -->
   <param name="aws.accessKey" value="#AWS_ACCESS_KEY#" />
   <param name="aws.secretKey" value="#AWS_SECRET_KEY#" />
   <param name="aws.s3.bucketBaseUrl" value="http://xebia-cocktail.s3-website-us-east-1.amazonaws.com/" />
   <param name="aws.s3.bucketName" value="xebia-cocktail" />
   
   <!-- CDN / CONTENT DELIVERY NETWORK -->
   <param name="cdn.url" value="http://d1u3j4x9ltwfxi.cloudfront.net" />

   <!-- MAIL -->
   <param name="mail.smtp.host" value="smtp.sendgrid.net" />
   <param name="mail.smtp.port" value="587" />
   <param name="mail.username" value="#SENDGRID_USERNAME#" />
   <param name="mail.password" value="#SENDGRID_PASSWORD#" />

   <!-- MONGODB -->
   <param name="mongodb.uri" value="mongodb://#MONGO_USERNAME#:#MONGO_PASSWORD#@boone.mongohq.com:10085/devoxxfr-demo" />

   <!-- PAPERTRAIL -->
   <param name="papertrail.host" value="logs.papertrailapp.com" />
   <param name="papertrail.port" value="#PAPERTRAIL_PORT#" />

   <!-- RE CAPTCHA -->
   <param name="recaptcha.publicKey" value="#RECAPTCHA_PUBLIC_KEY#" />
   <param name="recaptcha.privateKey" value="#RECAPTCHA_PRIVATE_KEY#" />

   <!-- SOLR -->
   <param name="solr.url" value="#SOLR_URL#" />

</config>